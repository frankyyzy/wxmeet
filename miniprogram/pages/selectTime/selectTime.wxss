textarea {
  width: 700rpx;
  padding: 25rpx 0;
}

.textarea-wrp {
  padding: 0 25rpx;
  background-color: #fff;
}

.page-section{
  width: 100%;
  margin-bottom: 60rpx;
}

.page-section:last-child{
  margin-bottom: 0;
}

.page-section-title{
  text-align: center;
  font-size: 50rpx;
  color: #999999;
  margin-bottom: 10rpx;
  padding-left: 30rpx;
  padding-right: 30rpx;
}

.fixedPosition {
  position:absolute;
}

.intro {
  margin: 30px;
  text-align: center;
}
.hori{
  flex-direction: felx;
}
.datet{
  width:50%;
}
/*table*/
.table{
  border:1px solid #dadada;
  border-right:0;
  border-bottom: 0;
  width: 98%;
  height:98%;
  margin-left: 1%;
}
.title{
  display:flex;
}
.tr{
  display: flex;
  justify-content: space-between;
}
.th{
  padding: 4.9px;
  border-bottom: 1px solid #dadada;
  border-right: 1px solid #dadada;
  text-align: center;
  background-color: #b66242;
  font-size: 24rpx;
  color: #330e0e;
}

.td{
  padding: 4.9px;
  border-bottom: 1px solid #dadada;
  border-right: 1px solid #dadada;
  text-align: center;
  font-size: 20rpx;
  color: #ec9480;
}
.td1{
  width:49%;
}
.tdblwhite{
  background-color:#fff;
}
.tdblgreen{
  background-color:#52962a;
}

